{
  "name": "talentsphere-hrms",
  "version": "1.0.0",
  "description": "Enterprise-grade HRMS system - TalentSphere",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install && cd client && npm install && npm run prisma:generate && cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "node server/utils/seed.js",
    "add-dummy-attendance": "node server/scripts/addDummyAttendanceData.js",
    "delete-dummy-attendance": "node server/scripts/deleteDummyAttendanceData.js",
    "link-goals-to-projects": "node server/scripts/linkGoalsToProjects.js"
  },
  "keywords": ["hrms", "hris", "hr", "payroll", "attendance"],
  "author": "TalentSphere",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0"
  }
}
